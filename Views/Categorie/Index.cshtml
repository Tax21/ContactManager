@model IEnumerable<ContactManager.Models.Categorie>

@{
    ViewData["Title"] = "Index";
}

<h1>Liste des categories</h1>

<p>
    <button type="button" class="btn btn-primary">
        <a class="text-white text-decoration-none" asp-action="Create">Create New</a>
    </button>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                <button type="button" class="btn btn-outline-warning">
                        <a class="text-dark text-decoration-none" asp-action="Edit" asp-route-id="@item.CategorieID"><i class="fa-regular fa-pen-to-square"></i></a>
                </button>
                <button type="button" class="btn btn-outline-success">
                        <a class="text-dark text-decoration-none" asp-action="Details" asp-route-id="@item.CategorieID"><i class="fa-solid fa-circle-info"></i></a>
                </button>
                <button type="button" class="btn btn-outline-danger">
                        <a class="text-dark text-decoration-none" asp-action="Delete" asp-route-id="@item.CategorieID"><i class="fa-regular fa-trash-can"></i></a>
                </button>
            </td>
        </tr>
}
    </tbody>
</table>
